{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "PostgreSQL": "Host=DB_HOST;Database=finance_one;Username=DB_USERNAME;Password=DB_PASSWORD"
  },
  "Security": {
    "AppSecret": "APP_SECRET_KEY",
    "ExpiresIn": "2"
  },
  "Firebase": {
    "ApiKey": "FIREBASE_API_KEY",
    "Bucket": "FIREBASE_BUCKET_ADDRESS",
    "AuthEmail": "FIREBASE_AUTH_EMAIL",
    "AuthPassword": "FIREBASE_AUTH_PASSWORD"
  },
  "Directories": {
    "TempPath": "PATH/TO/TEMP/FILES/DIR",
    "FirebaseFolderName": "firebase_files"
  }
}
